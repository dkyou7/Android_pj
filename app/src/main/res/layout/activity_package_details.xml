<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#9145afc7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".PackageDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <Button
            style="@style/btnBasic"
            android:id="@+id/cafe_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="카페"/>

        <TextView
            style="@style/textBasic"
            android:id="@+id/cafe_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            style="@style/btnBasic"
            android:id="@+id/meal_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="식사"/>

        <TextView
            style="@style/textBasic"
            android:id="@+id/meal_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            style="@style/btnBasic"
            android:id="@+id/movie_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="영화"/>

        <TextView
            style="@style/textBasic"
            android:id="@+id/movie_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            style="@style/btnBasic"
            android:id="@+id/pub_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="주점"/>

        <TextView
            style="@style/textBasic"
            android:id="@+id/pub_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                style="@style/btnBasic"
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="back"/>

            <Button
                style="@style/btnBasic"
                android:id="@+id/next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="next"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>