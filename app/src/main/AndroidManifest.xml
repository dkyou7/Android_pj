<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dbconnection">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.MainActivity" />
        <activity android:name=".Activity.DatePickActivity" />
        <activity android:name=".Activity.FinalMessageActivity" />
        <activity android:name=".Activity.LoginSplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.MailboxActivity"
            android:theme="@style/Theme.AppCompat" />
        <activity android:name=".Activity.PackageDetailsActivity" />
        <activity android:name=".Activity.PackageSelectActivity" />
        <activity android:name=".Activity.RandomImageActivity" />
        <activity android:name=".Activity.RandomMatchActivity" />
        <activity android:name=".Activity.SignInActivity" />

        <service
            android:name=".MyService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".MyInformation"></activity>
    </application>

</manifest>